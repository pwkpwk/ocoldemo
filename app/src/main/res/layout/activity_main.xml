<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ambientbytes.ocoldemo.ViewFactories" />
        <variable name="vm" type="com.ambientbytes.ocoldemo.viewmodels.MainViewModel"/>
    </data>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="1"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/buttons_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->vm.add()}"
                android:text="@string/add_button_text" />

            <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->vm.clear()}"
                android:text="@string/clear_button_text" />

            <Button
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->vm.changeOrder()}"
                android:text="@string/reorder_button_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end|fill_vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                app:itemsSource="@{vm.data}"
                app:layoutManager="android.support.v7.widget.StaggeredGridLayoutManager"
                app:viewFactory="@{ViewFactories.getMainViewFactory()}">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </GridLayout>

</layout>
